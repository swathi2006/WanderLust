
   
 <% layout('layouts/boilerplate') -%> 
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h3>EDIT YOUR LIST </h3>
            <br><br>
    <form method="POST" action="/listings/<%= list._id %>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">

        <div class="mb-3">
            <label class="form-label" for="title" >Title</label>
            <input class="form-control"  name="listing[title]" value=<%= list.title %> type="text" required />
            <div class="invalid-feedback">please!enter a title</div>
        </div>
       
       <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea   class="form-control"  name="listing[description]"  required value=<%= list.description %> ></textarea>
        <div class="invalid-feedback">please!enter a short description</div>
       </div>
       
       <div class="mb-3">
        <h5>Original listing image</h5>
        <br>
        <img src="<%= originalImageUrl %>">
       </div>
        <div class="mb-3">
            <label for="image-url" class="form-label">Upload image</label>
        <input   class="form-control"  name="listing[image]" value=<%= list.image%> type="file" />
        <div class="invalid-feedback">image url should be entered</div>
        </div>
       
       <div class="mb-3">
       <label for="price" class="form-label">Price%</label>
       <input  class="form-control"  name="listing[price]" value= <%=list.price%> type="number" required/>
       <div class="invalid-feedback">price should be valid</div>
       </div>

        <div class="row">
            <div class="mb-3 col-8">
            <label for="location" class="form-label">Location</label>
        <input  class="form-control"  name="listing[location]" value=<%= list.location %> type="text" required/>
        <div class="invalid-feedback">location should be valid</div>
        </div>
       
        <div class="mb-3 col-4">
            <label for="country" class="form-label">Country</label>
            <input  class="form-control"  name="listing[country]"  type= "text" value= <%= list.country %>  required/>
            <div class="invalid-feedback">country should be valid</div>
        </div>
       
       </div>

        <button class="btn btn-dark edit-btn mt-3">submit</button>
        <br><br><br>
        </form>
        </div>
        </div>

     
        
